{
	"ProblemData": {
		"name"             : "thermomech_bounce",
		"analysis_type"    : "thermo_mechanical",
		"model_parts_file" : "thermomech_bounce.txt"
	},
	"Solver": {
		"integr_scheme_trans" : "taylor_2",
		"integr_scheme_rotat" : "modified_euler",
		"integr_scheme_therm" : "forward_euler",
		"time_step"           : 1.0e-4,
		"final_time"          : 1.0
	},
	"Search": {
		"scheme"           : "simple_loop",
		"search_frequency" : 10
	},
	"GlobalCondition": {
		"gravity"           : [0.00,-9.81],
		"fluid_velocity"    : [1.0,1.0],
		"fluid_temperature" : 290.0
	},
	"InitialCondition": {
		"temperature": {
			"model_parts" : ["PARTICLES"],
			"value"       : 300.0
		}
	},
	"FixedCondition": {
		"temperature": {
			"type"        : "constant",
			"model_parts" : ["WALLS"],
			"value"       : 400.0
		}
	},
	"Material": [
	{
		"name"                 : "solid_material",
		"type"                 : "solid",
		"model_parts"          : ["PARTICLES","WALLS"],
		"density"              : 10,
		"young_modulus"        : 1000000,
		"young_modulus_real"   : 10000000,
		"poisson_ratio"        : 0.3,
		"thermal_conductivity" : 1000,
		"heat_capacity"        : 10
	},{
		"name"                 : "fluid_material",
		"type"                 : "fluid",
		"density"              : 1000.0,
		"thermal_conductivity" : 10.0,
		"heat_capacity"        : 100.0,
		"viscosity"            : 0.0001
	}
	],
	"ConvectionModel": {
		"nusselt_correlation" : "sphere_hanz_marshall",
		"model_parts"         : ["PARTICLES"]
	},
	"InteractionModel": {
		"contact_force_normal": {
			"model"                      : "viscoelastic_linear",
			"stiff_formula"              : "time",
			"restitution_coeff"          : 0.8,
			"remove_artificial_cohesion" : true
		},
		"contact_force_tangent": {
			"model"          : "spring_slider",
			"friction_coeff" : 0.3
		},
		"area_correction": {
			"model" : "ZYZ"
		},
		"direct_conduction": {
			"model" : "bob"
		},
		"indirect_conduction": {
			"model"        : "surrounding_layer",
			"layer_thick"  : 0.4,
			"min_distance" : 0.0000000275
		}
	},
	"Output": {
		"progress_print" : 1000,
		"number_output"  : 10,
		"save_workspace" : false
	},
	"Print": {
		"single_file"     : true,
		"printed_results" : ["position","velocity","acceleration","temperature"]
	}
}